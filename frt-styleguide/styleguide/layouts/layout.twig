<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="../favicon.ico">
    <title>{{ site_title }} - {% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block head %}
      <link rel="stylesheet" href="../css/styles.css">
      <!-- Base js library from drupal -->
      <script src="script/jquery.min.js"></script>
      <script src="script/drupal/jquery.once.js"></script>
      <script src="script/drupal/drupal.js"></script>
      <script src="script/drupal/picturefill.js"></script>
    {% endblock %}
  </head>
  <body>
    {% block header %}
      {% include 'header.twig' %}
      {% include 'navigation.twig' %}
      <h1>{% block title %}{% endblock %}</h1>
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
    {% include 'footer.twig' %}
    {% endblock %}
    {% block footer_scripts %}
      <script src="../js/lib/media.match.min.js"></script>
      <script src="../js/lib/enquire.min.js"></script>
      <script src="../js/lib/jquery.imagesloaded.min.js"></script>
      <script src="../js/lib/jquery.masonry.min.js"></script>
      <script src="../js/lib/slick.min.js"></script>
      <script type="text/javascript" src="../js/lib/jquery.lightgallery.min.js"></script>
      <script type="text/javascript" src="../js/lib/lg-share.min.js"></script>
      <script type="text/javascript" src="../js/lib/lg-fullscreen.min.js"></script>
      <script type="text/javascript" src="../js/lib/lg-zoom.min.js"></script>
      <script type="text/javascript" src="../js/lib/parallax.min.js"></script>
      <script src="../js/script.js"></script>
    {% endblock %}
  </body>
</html>
